 <%= form_for @wiki do |f| %>
   <%= f.label :title %>
   <%= f.text_field :title %>
 
   <%= f.label :body %>
   <%= f.text_area :body %>

   <% if current_user.admin? || current_user.premium? %>
    <div class="form-group">
     <%= f.label :private, class: 'checkbox' do %>
      <%= f.check_box :private %> Private wiki
     <% end %>
    </div>
   <% end %>
   <% if @wiki.private %>
     <%= render partial: 'collaborators/form', locals: { f: f } %>
  <% end %>
   <%= f.submit "Save" %>
<% end %>   

